{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run & Debug C++ (MSYS2)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/output/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false, 
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for GDB",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build C++ with g++ (MSYS2)"
    },
    {
      "name": "Run C++ (no debugger)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/output/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "integratedTerminal", 
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe",
      "preLaunchTask": "Build C++ with g++ (MSYS2)"
    }
  ]
}
